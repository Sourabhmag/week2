package com.BridgeLabz.DataStructurePrograms;

import com.BridgeLabz.utility.Util;

public class calender {
	public static void main(String[] args) {
		System.out.println("Enter month");
		int month = Util.readInt();
		System.out.println("Enter year");
		int year = Util.readInt();
		int[]month_days = {31,28,31,30,31,30,31,31,30,31,30,31};
		int x=1;
		int end_date;
		if(month==2 && year%4==0)
		{
			 month_days[month-1]=29;
		}
		end_date=month_days[month-1];
		Integer date[][]=new Integer[6][7];
		int day = Util.dayOfWeek(1, month, year); 
		int j=day;
		for(int i = 0;i<6;i++)
		{
			for(;j<7;j++)
			{
				if(x<=end_date)
				{
					date[i][j] = x;
					x++;
				}
			}
			j=0;
		}
		System.out.print("  Sun Mon Tue Wed Thu fri Sat");
		Util.display(date,6,7);
		/*
		 * for(int i = 0;i<6;i++) { System.out.println(); for(int k=0;k<7;k++) {
		 * if(date[i][k]!=0) { System.out.printf("%4d",date[i][k]); } else {
		 * System.out.print("    "); } } }
		 */
	}

}
